{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "esnext",
    "outDir": "./dist/out-src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "*": [ "./*" ],
      "src/*": ["./src/*"]
    },
    "types": ["node", "@wdio/sync", "@wdio/mocha-framework"],
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ]
}
