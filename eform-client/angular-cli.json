{
  "project": {
    "version": "1.0.1",
    "name": "eform-angular"
  },
  "apps": [{
    "root": "src",
    "outDir": "dist",
    "assets": [
      "assets",
      "favicon.ico",
      "assets/svg/icons.svg",
	  "robots.txt"
    ],
    "index": "index.html",
    "main": "main.ts",
    "polyfills": "polyfills.ts",
    "test": "test.ts",
    "tsconfig": "tsconfig.json",
    "prefix": "eform",
    "styles": [
      "../node_modules/bootstrap/less/bootstrap.less",
      "assets/bootstrap-datetimepicker.css",
      "assets/bootstrap-datepicker.css",
      "../node_modules/trumbowyg/dist/ui/trumbowyg.min.css",
      "assets/mt_layout.css",
      "assets/docs.min.css",
      "assets/font-awesome.min.css",
      "../node_modules/pnotify/dist/pnotify.css",
      "assets/sticky_footer.css",
      "assets/jquery.fileupload.css",
      "../node_modules/ng2-dnd/style.css"
    ],
    "scripts": [
      "../node_modules/jquery/dist/jquery.js",
      "../node_modules/bootstrap/js/modal.js",
      "../node_modules/bootstrap/js/tooltip.js",
      "../node_modules/bootstrap/js/collapse.js",
      "../node_modules/bootstrap/js/dropdown.js",
      "../node_modules/wowjs/dist/wow.min.js",
      "../node_modules/moment/moment.js",
      "../node_modules/pnotify/dist/pnotify.js",
      "../node_modules/bootstrap-timepicker/js/bootstrap-timepicker.js",
      "../node_modules/trumbowyg/dist/trumbowyg.min.js",
      "assets/js/bootstrap-datepicker.js",
      "assets/js/jquery.ujs.js",
      "assets/js/jquery.ui.widget.js",
      "assets/js/jquery.fileupload.js",
      "assets/js/jquery.fileupload-process.js",
      "assets/js/jquery.fileupload-validate.js",
      "assets/js/respond.min.js",
      "assets/js/buttons.js",
      "assets/js/bootstrap-switch.min.js",
      "assets/js/mt_layout.js"
    ],
    "environmentSource": "environments/environment.ts",
    "environments": {
      "dev": "environments/environment.ts",
      "prod": "environments/environment.prod.ts"
    }
  }],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [{
      "files": "src/**/*.ts",
      "project": "src/tsconfig.json"
    },
    {
      "files": "e2e/**/*.ts",
      "project": "e2e/tsconfig.json"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "sass",
    "prefixInterfaces": false,
    "inline": {
      "style": false,
      "template": false
    },
    "spec": {
      "class": false,
      "component": true,
      "directive": true,
      "module": false,
      "pipe": true,
      "service": true
    }
  }
}
